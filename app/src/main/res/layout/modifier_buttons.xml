<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3,4,5">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?android:attr/buttonBarStyle" >

        <Button
            android:id="@+id/modifier_alt"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/card"
            android:text="@string/alt"
            android:textSize="34sp" />

        <Button
            android:id="@+id/modifier_ctrl"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/card"
            android:text="@string/control"
            android:textSize="34sp" />

        <Button
            android:id="@+id/modifier_shift"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/card"
            android:text="@string/shift"
            android:textSize="34sp" />

        <Button
            android:id="@+id/modifier_super"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/card"
            android:text="@string/gui"
            android:textSize="34sp" />

        <Button
            android:id="@+id/modifier_meta"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/card"
            android:text="@string/meta"
            android:textSize="34sp" />

        <Button
            android:id="@+id/modifier_hyper"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/card"
            android:text="@string/hyper"
            android:textSize="34sp" />

    </TableRow>
</TableLayout>