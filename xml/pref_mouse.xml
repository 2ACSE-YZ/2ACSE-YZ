<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="1.0f"
        android:entries="@array/pref_mouse_sensitivity_list_titles"
        android:entryValues="@array/pref_mouse_sensitivity_list_values"
        android:key="sensitivity_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_mouse_sensitivity" />
    <ListPreference
        android:defaultValue="350"
        android:entries="@array/pref_mouse_delay_list_titles"
        android:entryValues="@array/pref_mouse_delay_list_values"
        android:key="delay_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_mouse_delay" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_mouse_mdelay_list_titles"
        android:entryValues="@array/pref_mouse_mdelay_list_values"
        android:key="mdelay_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_mouse_mdelay" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="mouse_invert_scroll"
        android:summary=""
        android:title="Invert mouse scroll" />

</PreferenceScreen>